<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>wonkotron.SpiritedAway</AssemblyName>
    <Description>A Kingdom: Two Crowns mod that disables the omnipresent ancestral tutorial ghost</Description>
    <Version>0.1.0</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
    <RestoreAdditionalProjectSources>
      https://api.nuget.org/v3/index.json;
      https://nuget.bepinex.dev/v3/index.json
    </RestoreAdditionalProjectSources>
    <RootNamespace>SpiritedAway</RootNamespace>
    <Copyright>2023, wonkotron</Copyright>
    <PackageProjectUrl>https://github.com/wonkotron/K2C-SpiritedAway</PackageProjectUrl>
    <RepositoryUrl>https://github.com/wonkotron/K2C-SpiritedAway</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
